<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/send_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/send_message"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/send_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/send_message_attributes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/to" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/subject" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/content" />

            <Button
                android:id="@+id/confirm_send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="98dp"
                android:text="@string/send" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deploy_signpost_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/door_url_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true" />

            <EditText
                android:id="@+id/door_hint_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true" />

            <EditText
                android:id="@+id/door_comment_input"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:inputType="text|textImeMultiLine"
                android:singleLine="false" />

            <Button
                android:id="@+id/cancel_deploy_signpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>